{
  "compilerOptions": {
    "jsx": "react-native",
    "module": "esnext",
    "target": "esnext",
    "types": [
      "react-native",
      "jest"
    ],
    "lib": [
      "esnext"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
  ],
  "extends": "expo/tsconfig.base"
}